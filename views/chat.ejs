


<link rel="stylesheet" href="<%= assetPath('css/chat.css') %>">
<script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

<div class="chatPageContainer">
    <div class="chatTitleBarContainer">

        <div class="chatImagesContainer">
            <% var i= 0 %>

              <% for(user of chat.users) {%>

                <% if(i<3){%>
                  <img src="<%= user.profilePic %>" alt="your image">
                  <% i+=1 %>
                <%}%>
              <%}%>
        </div>

        <span data-toggle="modal" data-target="#chatNameModal" id="chatName"><%=chat.chatName%></span>
        <% if(chat && chat.isGroupChat){%>
          <div class="titleContainer">

                <i class="far fa-plus-square"  data-toggle="modal" data-target="#addNewUserModal" title="Add a new user"></i>
            </a>
  
        </div>

       <button>
          <i class='fa fa-times leaveChat' data-id="${chatData._id}" title="Leave this chat"></i>
        </button>`

        <%}%>
        
      
      </div>
    <div class="mainContentContainer" data-room=<%=chat._id%>>

      
        <div class="chatContainer">
            <ul class="chatMessages">

            </ul>

            <div class="typingDots">
              <img src="https://c.tenor.com/-iQZrXlyW2oAAAAC/typing-dots.gif",alt="typing dots">
            </div>
           
            
            <div class="footer"><textarea id="inputTextbox" name="messageInput" placeholder="Type a message..."></textarea><button class="sendMessageButton"><i class="fas fa-paper-plane"></i></button></div>
        </div>
    </div>
</div>



<div class="modal fade" id="chatNameModal" tabindex="-1" role="dialog" aria-labelledby="chatNameModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="chatNameModal">Change the Chat Name</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
       <input type="text" placeholder="Enter a name for chat" id="chatNameTextbox" value=<%=chat.chatName%>>
         
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
        <button id="chatNameButton" type="button" class="btn btn-primary" >Change</button>
      </div>
    </div>
 
  </div>
</div>

<div class="modal fade" id="addNewUserModal" tabindex="-1" role="dialog" aria-labelledby="addNewUserModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
      <div class="modal-content">
          <div class="modal-header">
              <h5 class="modal-title" id="addNewUserModalLabel">Add a new user to this chat</h5><button class="close" type="button" data-dismiss="modal" aria-label="Close"></button><span aria-hidden="true">&times;</span>
          </div>
          <div class="modal-body"><input id="addNewUserModalTextBox" type="text" autocomplete="off" style="width: 100%;" />
              <div class="userList" style="overflow-y: scroll; max-height: 200px; margin-top: 10px;"></div>
          </div>
          <div class="modal-footer"><button class="btn btn-secondary" type="button" data-dismiss="modal">Cancel</button><button class="btn btn-primary" id="addNewUserModalButton" type="button">Add user</button></div>
      </div>
  </div>
</div>

