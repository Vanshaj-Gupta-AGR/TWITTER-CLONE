    <body>
        

     <%- body %>

     
        <%- script %>

        

        <% if(flash.success && flash.success.length>0){%>
            <script>
               
                    new Noty({
                        theme: 'relax',
                        text: '<%=flash.success %>',
                        type: 'success',
                        layout: 'topRight',
                        timeout: 1000
                        
                    }).show();
                
            </script>
            <%}else if(flash.error && flash.error.length>0){%>
                <script>
               
                    new Noty({
                        theme: 'relax',
                        text: '<%=flash.error %>',
                        type: 'error',
                        layout: 'topRight',
                        timeout: 1500
                        
                    }).show();
                
            </script>
    
            <%} %>
            

<script src="https://kit.fontawesome.com/2a98f01c57.js" crossorigin="anonymous"></script>
